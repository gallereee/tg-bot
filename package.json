{
  "name": "@gallereee/tg-bot",
  "version": "0.0.2",
  "description": "Telegram bot for Galleree",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gallereee/tg-bot.git"
  },
  "author": "Dmitry Bardyshev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gallereee/tg-bot/issues"
  },
  "homepage": "https://github.com/gallereee/tg-bot#readme",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "test": "jest"
  },
  "dependencies": {
    "@gallereee/iam": "^0.0.6",
    "@gallereee/pms": "^0.0.6",
    "@liaoliaots/nestjs-redis": "^8.0.0",
    "@nestjs/bull": "^0.5.4",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^2.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^8.4.3",
    "@nestjs/platform-express": "^8.0.0",
    "bull": "^4.8.1",
    "ioredis": "^5.0.3",
    "lodash": "^4.17.21",
    "nanoid": "^3.3.2",
    "nest-winston": "^1.6.2",
    "nestjs-telegraf": "^2.4.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "telegraf": "^4.7.0",
    "telegraf-session-redis": "^5.1.0",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@bd-dm/eslint-config-node": "^0.0.3",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/bull": "^3.15.8",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/lodash": "^4.14.181",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typegram": "^3.8.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
